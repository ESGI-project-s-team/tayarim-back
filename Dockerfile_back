FROM maven:3.9.6-amazoncorretto-21-debian as build

WORKDIR /app

COPY pom.xml .
COPY src ./src
COPY src/main/resources/.env.production src/main/resources/.env.production

RUN ls -la src/main/resources

RUN --mount=type=secret,id=USER \
    sh -c 'PRIVATE_KEY=$(cat /run/secrets/PRIVATE_KEY) && \
    sed -i "s|USER=.*|USER=${USER}|" src/main/resources/.env.production

RUN --mount=type=secret,id=MAILTRAP_API_KEY \
    sh -c 'MAILTRAP_API_KEY=$(cat /run/secrets/MAILTRAP_API_KEY) && \
    sed -i "s|MAILTRAP_API_KEY=.*|MAILTRAP_API_KEY=${MAILTRAP_API_KEY}|" src/main/resources/.env.production

RUN --mount=type=secret,id=PASSWORD \
    sh -c 'PASSWORD=$(cat /run/secrets/PASSWORD) && \
    sed -i "s|PASSWORD=.*|PASSWORD=${PASSWORD}|" src/main/resources/.env.production

RUN --mount=type=secret,id=STRIPE_SECRET_KEY \
    sh -c 'STRIPE_SECRET_KEY=$(cat /run/secrets/STRIPE_SECRET_KEY) && \
    sed -i "s|STRIPE_SECRET_KEY=.*|STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}|" src/main/resources/.env.production

RUN --mount=type=secret,id=GCP \
    sh -c 'GCP=$(cat /run/secrets/GCP) && \
    sed -i "s|GCP=.*|GCP=${GCP}|" src/main/resources/.env.production

RUN --mount=type=secret,id=PRIVATE_KEY \
    sh -c 'PRIVATE_KEY=$(cat /run/secrets/PRIVATE_KEY) && \
    sed -i "s|PRIVATE_KEY=.*|PRIVATE_KEY=${PRIVATE_KEY}|" src/main/resources/.env.production'

RUN mvn clean package -DskipTests

FROM amazoncorretto:21-alpine

WORKDIR /app

COPY --from=build /app/target/Tayarim-0.0.1-SNAPSHOT.jar .

EXPOSE 8080

ENV PORT=8080

CMD ["java", "-jar", "Tayarim-0.0.1-SNAPSHOT.jar", "--ENV_FILE=optional:file:.env.production[.properties]"]